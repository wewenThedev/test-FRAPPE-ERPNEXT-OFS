 "html": "\r\n{# Ajouter un en-t\u00eate personnalis\u00e9 #}\r\n<div class=\"print-heading\">\r\n    <h2>FICHE SESSION - {{ doc.name }}</h2>\r\n</div>\r\n\r\n{% set cours_doc = frappe.get_doc(\"Cours\", doc.cours) %}\r\n{% set formateur_doc = frappe.get_doc(\"Formateur\", cours_doc.formateur) if cours_doc and cours_doc.formateur else None %}\r\n\r\n{# R\u00e9organiser l'ordre des champs #}\r\n<div class=\"section\">\r\n    <div class=\"section-head\">\r\n        <span>D\u00e9tails de la Session</span>\r\n    </div>\r\n    <div class=\"section-data\">\r\n        <table class=\"table table-bordered\">\r\n            <tr>\r\n                <td><b>Cours</b></td>\r\n                <td>{{ doc.cours }}</td>\r\n                <td><b>Formateur</b></td>\r\n                <td>{{ formateur_doc.nom_complet}} -Sp\u00e9cialiste en {{formateur_doc.specialite }}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><b>Date d\u00e9but</b></td>\r\n                <td>{{ doc.date_debut }}</td>\r\n                <td><b>Date fin</b></td>\r\n                <td>{{ doc.date_fin }}</td>\r\n            </tr>\r\n            <tr>\r\n                <td><b>Lieu</b></td>\r\n                <td colspan=\"3\">{{ doc.lieu or \"Non sp\u00e9cifi\u00e9\" }}</td>\r\n            </tr>\r\n        </table>\r\n    </div>\r\n</div>\r\n\r\n<div class=\"section\">\r\n    <div class=\"section-head\">\r\n        <span>Participants ({{ doc.participants | length }})</span>\r\n    </div>\r\n    <div class=\"section-data\">\r\n        {% if doc.participants %}\r\n        <table class=\"table table-bordered\">\r\n            <thead>\r\n                <tr>\r\n                    <th>Nom</th>\r\n                    <th>Email</th>\r\n                    <th>Statut</th>\r\n                </tr>\r\n            </thead>\r\n            <tbody>\r\n                {% for participant in doc.participants %}\r\n                <tr>\r\n                    <td>{{ participant.nom }}</td>\r\n                    <td>{{ participant.email }}</td>\r\n                    <td>\r\n                        {% if participant.statut == \"Confirm\u00e9\" %}\r\n                            <span class=\"badge badge-success\">{{ participant.statut }}</span>\r\n                        {% elif participant.statut == \"Annul\u00e9\" %}\r\n                            <span class=\"badge badge-danger\">{{ participant.statut }}</span>\r\n                        {% else %}\r\n                            <span class=\"badge badge-warning\">{{ participant.statut }}</span>\r\n                        {% endif %}\r\n                    </td>\r\n                </tr>\r\n                {% endfor %}\r\n            </tbody>\r\n        </table>\r\n        {% else %}\r\n        <p class=\"text-muted\">Aucun participant</p>\r\n        {% endif %}\r\n    </div>\r\n</div>",
