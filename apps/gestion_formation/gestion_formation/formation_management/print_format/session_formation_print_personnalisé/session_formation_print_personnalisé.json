 "html": "{% set session = doc %}\r\n\r\n{% set cours_doc = frappe.get_doc(\"Cours\", doc.cours) %}\r\n{% set formateur_doc = frappe.get_doc(\"Formateur\", cours_doc.formateur) if cours_doc and cours_doc.formateur else None %}\r\n\r\n<!-- En-t\u00eate avec style CSS inline -->\r\n\r\n<div class=\"print-heading\">\r\n    <div style=\"text-align: left;\">\r\n<img alt=\"Ent\u00eate DEV OFS\" height=\"\" src=\"/private/files/Copilot_20251124_124358.png\" style=\"height: 100px; width: 100px;\">\r\n</div>\r\n<div style=\"border: 2px solid #2e86ab; padding: 20px; margin-bottom: 20px; background-color: #f8f9fa;\">\r\n    <h1 style=\"color: #2e86ab; text-align: center; margin: 0;\">\r\n        SESSION DE FORMATION\r\n    </h1>\r\n</div>\r\n    <h2 class=\"text-align: center;\">{{ doc.name }}</h2>\r\n</div>\r\n<!-- Section Informations principales -->\r\n<div style=\"margin-bottom: 30px;\">\r\n    <h2 style=\"color: #2e86ab; border-bottom: 1px solid #2e86ab; padding-bottom: 5px;\">\r\n        Informations de la Session\r\n    </h2>\r\n    \r\n    <table style=\"width: 100%; border-collapse: collapse;\">\r\n        <tr>\r\n            <td style=\"width: 30%; padding: 8px; font-weight: bold;\">Cours :</td>\r\n            <td style=\"width: 70%; padding: 8px;\">{{ session.cours }}</td>\r\n        </tr>\r\n        <tr style=\"background-color: #f8f9fa;\">\r\n            <td style=\"padding: 8px; font-weight: bold;\">Formateur :</td>\r\n            <td style=\"padding: 8px;\">{{ formateur_doc.nom_complet}} -Sp\u00e9cialiste en {{formateur_doc.specialite }}</td>\r\n        </tr>\r\n        <tr>\r\n            <td style=\"padding: 8px; font-weight: bold;\">Dates :</td>\r\n            <td style=\"padding: 8px;\">\r\n                Du {{ frappe.format(session.date_debut, {'fieldtype': 'Date'}) }} \r\n                au {{ frappe.format(session.date_fin, {'fieldtype': 'Date'}) }}\r\n            </td>\r\n        </tr>\r\n        <tr style=\"background-color: #f8f9fa;\">\r\n            <td style=\"padding: 8px; font-weight: bold;\">Lieu :</td>\r\n            <td style=\"padding: 8px;\">{{ session.lieu or \"Non sp\u00e9cifi\u00e9\" }}</td>\r\n        </tr>\r\n    </table>\r\n</div>\r\n\r\n<!-- Section Participants -->\r\n<div style=\"margin-bottom: 30px;\">\r\n    <h2 style=\"color: #2e86ab; border-bottom: 1px solid #2e86ab; padding-bottom: 5px;\">\r\n        Liste des Participants ({{ session.participants | length }})\r\n    </h2>\r\n    \r\n    {% if session.participants %}\r\n    <table style=\"width: 100%; border-collapse: collapse; border: 1px solid #ddd;\">\r\n        <!-- En-t\u00eate du tableau -->\r\n        <thead>\r\n            <tr style=\"background-color: #2e86ab; color: white;\">\r\n                <th style=\"padding: 10px; text-align: left; border: 1px solid #ddd;\">Nom</th>\r\n                <th style=\"padding: 10px; text-align: left; border: 1px solid #ddd;\">Email</th>\r\n                <th style=\"padding: 10px; text-align: left; border: 1px solid #ddd;\">Statut</th>\r\n            </tr>\r\n        </thead>\r\n        \r\n        <!-- Corps du tableau -->\r\n        <tbody>\r\n            {% for participant in session.participants %}\r\n            <tr style=\"{{ 'background-color: #f8f9fa;' if loop.index % 2 == 0 else '' }}\">\r\n                <td style=\"padding: 8px; border: 1px solid #ddd;\">{{ participant.nom }}</td>\r\n                <td style=\"padding: 8px; border: 1px solid #ddd;\">{{ participant.email }}</td>\r\n                <td style=\"padding: 8px; border: 1px solid #ddd;\">\r\n                    {% if participant.statut == \"Confirm\u00e9\" %}\r\n                        <span style=\"color: green; font-weight: bold;\">\u2713 {{ participant.statut }}</span>\r\n                    {% elif participant.statut == \"Annul\u00e9\" %}\r\n                        <span style=\"color: red; font-weight: bold;\">\u2717 {{ participant.statut }}</span>\r\n                    {% else %}\r\n                        <span style=\"color: orange;\">{{ participant.statut }}</span>\r\n                    {% endif %}\r\n                </td>\r\n            </tr>\r\n            {% endfor %}\r\n        </tbody>\r\n    </table>\r\n    {% else %}\r\n    <p style=\"color: #666; font-style: italic;\">Aucun participant inscrit</p>\r\n    {% endif %}\r\n</div>\r\n\r\n<!-- Pied de page -->\r\n<div style=\"margin-top: 40px; padding-top: 10px; border-top: 1px solid #ddd; font-size: 12px; color: #666;\">\r\n    <p>Document g\u00e9n\u00e9r\u00e9 le {{ frappe.utils.get_datetime().strftime('%d/%m/%Y \u00e0 %H:%M') }}</p>\r\n</div>",
